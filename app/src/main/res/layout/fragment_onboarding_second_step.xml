<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.fragments.onboarding.OnBoardingSecondStepFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:src="@drawable/onboarding_picture_2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="2dp"
        android:text="Получить займ"
        android:textSize="22sp"
        app:lineHeight="28sp"
        app:textFontWeight="600" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="2dp"
        android:text="Отслеживайте изменение статуса заявки."
        android:textSize="16sp"
        app:lineHeight="20sp"
        app:textFontWeight="400" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="2dp"
        android:text="@string/onboarding_second_small_text"
        android:textSize="16sp"
        app:lineHeight="20sp"
        app:textFontWeight="400" />

</LinearLayout>