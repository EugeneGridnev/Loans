<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.fragments.onboarding.OnBoardingFirstStepFragment">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:src="@drawable/onboarding_picture_1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="2dp"
        android:lineHeight="28sp"
        android:text="Оформить займ"
        android:textFontWeight="600"
        android:textSize="22sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="2dp"
        android:lineHeight="20sp"
        android:text="Выберите сумму и нажмите «продолжить». Затем укажите свои данные."
        android:textFontWeight="400"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="2dp"
        android:lineHeight="20sp"
        android:text="После нажатия «Оформить займ» заявка поступит в банк"
        android:textFontWeight="400"
        android:textSize="16sp" />

</LinearLayout>